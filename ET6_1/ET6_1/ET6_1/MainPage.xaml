        <Label
            x:Name="lbldevice"
            Text="" 
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="#FF8080"
            FontAttributes="Bold,Italic"
            FontSize="Large"/>


       


    </StackLayout>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,20,0,0">
            
            
